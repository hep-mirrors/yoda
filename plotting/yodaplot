def plot(a):
    aos = yoda.read(a)
    href = None
    hcmps = [NumpyHist(ao) for ao in aos.values()]
    xmin = min(min(h.xmin) for h in hcmps)
    xmax = max(max(h.xmax) for h in hcmps)
    xdiff = xmax - xmin
