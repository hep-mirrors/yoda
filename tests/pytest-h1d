#! /usr/bin/env python

import yoda

NUM_SAMPLES = 1000
h = yoda.Histo1D(20, 0.0, 100.0, path="/foo", title="MyTitle")
for i in range(NUM_SAMPLES):
    exp = - (i-NUM_SAMPLES/2)**2 / float(NUM_SAMPLES/4)
    val = 2.718 ** exp
    h.fill(val);
print h.mean(), "+-", h.stdDev()
print h

linspace = [10.0, 15.0, 20.0, 25.0, 30.0, 35.0, 40.0, 45.0,
            50.0, 55.0, 60.0, 65.0, 70.0, 75.0, 80.0, 85.0,
            90.0, 95.0, 100.0]

logspace = [1.0, 1.2311444133449163, 1.515716566510398,
 		    1.8660659830736148, 2.2973967099940698,
 		    2.8284271247461903, 3.4822022531844961,
 		    4.2870938501451725, 5.2780316430915768,
 		    6.4980191708498829, 8.0, 9.8491553067593287,
 		    12.125732532083182, 14.928527864588919,
 		    18.379173679952562, 22.627416997969522,
 		    27.857618025475968, 34.296750801161373,
 		    42.2242531447326, 51.984153366799077, 64.0]

h = yoda.Histo1D(linspace, path="/bar", title="Linearly spaced histo")
#print h
h = yoda.Histo1D(logspace, path="/baz", title="Log-spaced histo")
#print h
