prefix=@prefix@
exec_prefix=@exec_prefix@
datarootdir=@datarootdir@

export PATH="$exec_prefix/bin:$PATH"
export @LIBPATHVARNAME@="@libdir@:@YAML_CPPLIBPATH@:$@LIBPATHVARNAME@"
export PYTHONPATH="@YODA_PYTHONPATH@:$PYTHONPATH"

