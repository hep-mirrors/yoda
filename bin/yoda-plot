#! /usr/bin/env python

import sys, math
from yoda import *

h = Histo1D(20, 4, 6)
f = open(sys.argv[1], "r")
for line in f:
    val = float(line[:-1])
    logval = math.log10(val)
    h.fill(logval)
f.close()

maxheight = -1
for b in h.bins():
    if maxheight < b.height():
        maxheight = b.height()
MAXCHARS = 20
for b in h.bins():
    numchars = int(MAXCHARS * b.height() / maxheight)
    print "10^%2.1f %s" % (b.lowEdge(), "#" * numchars)
